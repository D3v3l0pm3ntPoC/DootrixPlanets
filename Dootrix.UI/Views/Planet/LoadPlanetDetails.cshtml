@model Dootrix.Planets.DataAccess.Model.Planet

@{
    ViewBag.Title = "LoadPlanetDetails";
}

<h2>@Model.Name Planet Details</h2>

<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-6">
        <table class="table table-striped table-hover">
            @*<thead>
                <tr class="title">@Model.Name</tr>
            </thead>*@
            <tbody>
                <tr>
                    <td>Description: </td>
                    <td></td>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <td>Diameter: </td>
                    <td>@Model.Profile.Diameter</td>
                </tr>
                <tr>
                    <td>Mass: </td>
                    <td>@Model.Profile.Mass</td>
                </tr>
                <tr>
                    <td>Moons: </td>
                    <td>@Model.Profile.Moons</td>
                </tr>
                <tr>
                    <td>Orbit Distance: </td>
                    <td>@Model.Profile.OrbitDistance</td>
                </tr>
                <tr>
                    <td>Orbit Period: </td>
                    <td>@Model.Profile.OrbitPeriod</td>
                </tr>
                <tr>
                    <td>Temperature: </td>
                    <td>@Model.Profile.SurfaceTemperature</td>
                </tr>
                <tr>
                    <td>Images</td>
                </tr>
                <tr>
                    @foreach (string imageLink in Model.ImageLinks)
            {
                int index = 1;
                        <td><a href="@imageLink" data-lightbox='photo' data-title="Snapshots of @Model.Name">View Image @index</a></td>
                        index++;
                    }
                </tr>
                <tr />
                <tr />
                <tr>
                    <td><a href="@Url.Action("Index", "Home")">Back to Search</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script>
    lightbox.option({
        'resizeDuration': 200,
        'wrapAround': true,
        'albumLabel': "Image %1 of %2",
        'alwaysShowNavOnTouchDevices': true
    })
</script>


