@{ 
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}


@* For a huge dataset, this can be loaded via ajax, for this use case i believe its an unnecessary overhead *@
<datalist id="planetsData">
    <option value="Mars">
    <option value="Mercury">
    <option value="Earth">
    <option value="Neptune">
    <option value="Jupiter">
    <option value="Saturn">
    <option value="Uranus">
    <option value="Pluto">
    <option value="Venus" />
</datalist>

<form class="center-form" action="@Url.Action("FindPlanetByName", "Planet")" method="POST">
    <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-6">
            <img src="http://www.planetplanet.org/img/planet_text.png" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-6">
            <input class="search" name="name" placeholder="Type any letter to see suggestions" type="text" list="planetsData">
            <button class="button" type="submit">Search <i class="glyphicon glyphicon-search"></i></button>
            @*<span class="arrow">
                <input type="button" class="button" value="Search">
            </span>*@            
        </div>
    </div>
</form>

